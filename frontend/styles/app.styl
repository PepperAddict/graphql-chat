@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@300&display=swap');

body 
    font-family: 'Open Sans', sans-serif;
    width: 100%;
    height: auto;
    font-size: 18px;
#app 
    height: 100%;
    display: grid;
    place-items: center; 

.home-container 
    width: 100%;
    max-width: 500px;
    margin: auto;
    overflow:hidden;
    padding: 30px;
    box-sizing: border-box;
    display: grid;
    place-content: center;
    height: 100vh;
form 
    display: grid;
    width: 100%;
    button 
        justify-self: end;
    p  
    input 
        width: 100%;
        height: 50px;
        border: 2px solid #ccc;
        border-radius: 5px;
        padding: 5px;
        box-sizing: border-box;
        font-size: 18px;

button 
    height: 40px;
    width: 100px;
    margin: 5px 0;
    float: right;
    cursor: pointer;
    background: #00dc1f;
    color: white;
    border: 0px;
    font-weight: bold;

